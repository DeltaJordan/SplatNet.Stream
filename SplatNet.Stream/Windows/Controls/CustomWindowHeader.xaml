<UserControl x:Class="SplatNet.Stream.Windows.Controls.CustomWindowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SplatNet.Stream.Windows.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
        <Button Click="Minimize_Click" Background="Transparent" BorderBrush="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
            <materialDesign:PackIcon Kind="Minimize" Foreground="White"/>
        </Button>
        <Button Click="Close_Click" WindowChrome.IsHitTestVisibleInChrome="True">
            <materialDesign:PackIcon Kind="Close" Foreground="White"/>
        </Button>
    </StackPanel>
</UserControl>
